<section class="ui inverted teal segment">
    <section class="ui yellow raised segment">
    <div class="ui grid">
        <aside class="six wide column">
            <img src="images/global.png" class="ui medium centered image">
        </aside>

    <article class="ten wide column">
    <table class="ui selectable table raised segment">
        <h2 class="ui center aligned header segment">
            Global Timeline Tweets
        </h2>

    <tbody>
        {{#if tweets}}
            {{#each tweets}}
            <tr>
                <td>
                    <!-- https://semantic-ui.com/views/comment.html -->
                    <div class="ui comments">
                        <div class="comment">
                            {{#if tweeter.picture.data}}
                                <a href="/viewotheruser/{{tweeter._id}}" class="avatar">
                                    <div class="ui big avatar image">
                                        <img class="ui rounded image" src="/getUserPicture/{{tweeter._id}}">
                                    </div>
                                </a>
                            {{else}}
                                <div class="avatar">
                                    <img class="ui rounded image" src="images/noimage.jpg">
                                </div>
                            {{/if}}

                            <div class="content">
                                <div class="text">
                                    <pre>     {{text}}</pre>
                                </div>
                                <div class="over">
                                    {{#if picture.data}}
                                        <div class="image">
                                            <img src="/getPicture/{{_id}}">
                                        </div>
                                    {{/if}}
                                </div>
                                <br>

                                <div class="metadata">
                                    &emsp;Tweeted by: {{tweeter.firstName}} {{tweeter.lastName}}<br>
                                    <div class="date">&emsp;<i class="grey at icon"></i>{{date}}</div>&emsp;
                                    <i class="grey mail outline icon"></i>{{tweeter.email}}&emsp;
                                </div>

                            </div>
                        </div>
                    </div>
                </td>

                <td>
                    <div class="ui mini buttons">
                        <button class="ui blue basic submit button" formaction="/follow" value="{{tweeter._id}}">
                            <i class="twitter icon"></i>Follow
                        </button>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>

        </table>
        </article>
        </div>
        {{else}}
            <aside class="ten wide column">
                <section class="ui center aligned raised segment">
                    <h2 class="ui red header">No one is Tweeting???? <br> Goodbye World! </h2>
                </section>
            </aside>
        {{/if}}

    </section>
</section>

<script src="js/tada.js"></script>
<script src="js/avatar-jiggle.js"></script>
