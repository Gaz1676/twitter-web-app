<section class="ui inverted teal segment">
    <section class="ui yellow raised segment">
        <div class="ui grid">

            <aside class="ui eight wide column">
                <img class="ui medium centered image" src="images/tweet.png">
            </aside>

            <div class="ui eight wide column">
                <div class="ui yellow raised fluid form center aligned segment">

                    <form method="post" enctype="multipart/form-data" action="/sendtweet">

                        <div class="ui red field">
                            <h2 class="ui blue header">Extra, Extra Tweet All About It!!</h2>
                            <textarea placeholder="What's on your mind..." name="text" rows="4" cols="50"></textarea>
                            <span id='remainingChars'></span>
                        </div>
                        <div class="ui field">
                            <h4>Fancy tweeting a picture?? Well what are you waiting for..</h4>
                            <input type="file" name="picture">
                        </div>

                        <div class="ui tiny buttons">
                            <button class="ui animated fade red submit button">
                                <div class="visible content"><i class="yellow twitter icon"></i>Post</div>
                                <div class="hidden content">Submit</div>
                            </button>
                        </div>
                    </form>

                    {{> formerror }}
                </div>
            </div>

        </div>
    </section>
</section>

