<section class="ui inverted teal segment">
    <section class="ui yellow raised segment">
    <div class="ui grid">
        <aside class="six wide column">
            <img src="images/global.png" class="ui medium centered image">
        </aside>

    <article class="ten wide column">
    <table class="ui selectable table raised segment">
        <h2 class="ui center aligned header segment">
            Global Timeline Tweets
        </h2>

    <tbody>
        {{#if tweets}}
            {{#each tweets}}
            <tr>
                <td>
                    <!-- https://semantic-ui.com/views/comment.html -->
                    <div class="ui comments">
                        <div class="comment">

                            <!-- https://semantic-ui.com/elements/image.html -->
                            {{#if tweeter.picture.data}}
                                <a href="/viewotheruser/{{tweeter.id}}" class="avatar">
                                    <div class="ui massive avatar image">
                                        <img class="ui image" src="/getuserpicture/{{tweeter.id}}" title="Check out my Profile Page">
                                    </div>
                                </a>
                            {{else}}
                                <a href="/viewotheruser/{{tweeter.id}}" class="avatar">
                                    <div class="avatar">
                                        <img class="ui rounded image" src="images/noimage.jpg">
                                    </div>
                                </a>
                            {{/if}}

                            <div class="content">
                                <div class="text">
                                    <pre>       {{text}}</pre>
                                </div>

                                <!-- Tweet image -->
                                <div class="over">
                                    {{#if picture.data}}
                                        <a href="/getpicture/{{id}}" target="_blank" title="Click for Full Size Image">
                                            <div class="image">
                                                <img src="/getpicture/{{id}}">
                                            </div>
                                        </a>
                                    {{/if}}
                                </div>
                                <br>

                                <div class="metadata">
                                    &emsp;&emsp;Tweeted by: {{tweeter.firstName}} {{tweeter.lastName}}<br>
                                    <div class="date">&emsp;&emsp;<i class="grey at icon"></i>{{date}}</div>&emsp;
                                    <i class="grey mail outline icon"></i>{{tweeter.email}}<br>&emsp;&emsp;
                                </div>
                            </div>

                        </div>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
        </table>
        </article>
        </div>

        {{else}}
            <aside class="ten wide column">
                <section class="ui center aligned raised segment">
                    <h2 class="ui red header">No one is Tweeting???? <br> Goodbye World! </h2>
                </section>
            </aside>
        {{/if}}

    </section>
</section>

<script src="js/tada.js"></script>
<script src="js/avatar-jiggle.js"></script>