{{> welcomemenu }}

<section class="ui inverted teal segment">
    <section class="ui yellow raised segment">
        <div class="ui three column grid basic middle aligned segment">

            <div class="column">
                <img class="ui medium centered image" src="images/login.png">
            </div>

            <div class="column">
                <form class="ui raised segment form" action="/login" method="POST">
                    <h1 class="ui blue center aligned header">Log-in</h1>

                    <div class="field">
                        <label>Email</label>
                        <div class="ui icon input">
                            <input type="text" name="email">
                            <i class="mail icon"></i>
                        </div>
                    </div>

                    <div class="field">
                        <label>Password</label>
                        <div class="ui icon input">
                            <input type="password" name="password">
                            <i class="lock icon"></i>
                        </div>
                    </div>

                    <button class="ui tiny animated fade red submit button">
                        <div class="visible content"><i class="lock icon"></i>Enter</div>
                        <div class="hidden content"><i class="unlock icon"></i>Click</div>
                    </button>

                </form>
                {{> formerror}}
            </div>

            <div class="column">
                <img class="ui medium centered image" src="images/login2.png">
            </div>

        </div>
    </section>
</section>